# editorconfig.org
root = false

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true

[**.java]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

[**.groovy]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[**.xml]
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 120
trim_trailing_whitespace = true

[**.md]
trim_trailing_whitespace = false
max_line_length = 100

[**/hooks/**]
end_of_line = lf
